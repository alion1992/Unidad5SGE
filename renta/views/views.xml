<odoo>
  <data>
    <!-- explicit list view definition -->

    <!-- Esta es la pantalla del arbol-->
    <record model="ir.ui.view" id="renta.list">
      <field name="name">renta list</field>
      <field name="model">renta.renta</field>
      <field name="arch" type="xml">
        <tree>
          <field name="codigo"/>
          <field name="ano"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="renta.list_cliente">
      <field name="name">renta list cliente</field>
      <field name="model">renta.cliente</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="apellido1"/>
          <field name="apellido2"/>
        </tree>
      </field>
    </record>

    <!-- Esta en la pantalla del formulario-->
    <record model="ir.ui.view" id="renta_form_view">
    <field name="name">renta.form</field>
    <field name="model">renta.renta</field>
    <field name="arch" type="xml">
        <form string="Renta">
            <sheet>
                <group>
                    <field name="codigo"/>
                    <field name="descripcion"/>
                    <field name="ano"/>    
                </group>
            </sheet>
        </form>
    </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="renta.action_window_renta">
      <field name="name">renta window</field>
      <field name="res_model">renta.renta</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.actions.act_window" id="renta.action_window_cliente">
      <field name="name">GestiÃ³n Clientes</field>
      <field name="res_model">renta.cliente</field>
      <field name="view_mode">tree,form</field>
    </record>


