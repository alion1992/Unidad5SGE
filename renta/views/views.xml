    <!-- Top menu item -->

    <menuitem name="RENTA 2025" id="renta.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Rentas de Clientes" id="renta.menu_1" parent="renta.menu_root"/>
    <menuitem name="Clientes" id="renta.menu_2" parent="renta.menu_root"/>
    <!--
    <menuitem name="Menu 2" id="renta.menu_2" parent="renta.menu_root"/>-->

    <!-- actions -->

    <menuitem name="List" id="renta.menu_1_list" parent="renta.menu_1"
              action="renta.action_window_renta"/>
    <menuitem name="List" id="renta.menu_2_list" parent="renta.menu_2"
              action="renta.action_window_cliente"/>
